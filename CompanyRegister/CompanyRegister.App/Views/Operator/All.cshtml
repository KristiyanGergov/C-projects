@model IEnumerable<CompanyRegister.Models.Entity.Employee>
@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_OperatorLayout.cshtml";
    HtmlHelper.ClientValidationEnabled = true;
    HtmlHelper.UnobtrusiveJavaScriptEnabled = true;
}
<link href="~/Styles/All.css" rel="stylesheet" />
<h2>All Employees</h2>
<div class="panel-footer">
        @Html.ActionLink("Add new employee", "Create", null, new {@class = "btn btn-default" })
</div>
<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>Name</th>
        <th>Info</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>

    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.FirstName @employee.SecondName @employee.LastName</td>
            <td>@Html.ActionLink("Details", "Details", "Employee", new { id = employee.Id }, new { @id = "details" })</td>
            <td>@Html.ActionLink("Edit", "Edit", "Operator", new { id = employee.Id }, new { @id = "edit"} )</td>
            <td>
                @using (Html.BeginForm("Delete", "Operator"))
                {
                    @Html.Hidden("Id", employee.Id)
                    <input type="submit" class="btn btn-warning btn-xs" value="Delete" />
                }
            </td>
        </tr>
    }
</table>