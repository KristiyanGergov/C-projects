@model IEnumerable<CompanyRegister.Models.Entity.Employee>
@{
    ViewBag.Title = "All";
}
<link href="~/Styles/All.css" rel="stylesheet" />
<h2>All Employees</h2>

<form asp-controller="Employee" asp-action="All">
    <div class="form-group">
        <p>
            <input type="text" name="name" class="form-control pull-left" placeholder="Search name...">
            <input type="submit" class="btn btn-success right" value="Search" />
        </p>
    </div>
</form>

<table class="table table-striped table-condensed table-bordered">
    <tr>
        <th>Name</th>
        <th>Info</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName @item.SecondName @item.LastName</td>
            <td>@Html.ActionLink("Details", "Details", "Employee", new { id = item.Id }, new { @id = "details" })</td>
        </tr>
    }
</table>