@using CarDealer.Models.ViewModels.Suppliers
@model IEnumerable<SupplierAllVm>

@{
    ViewBag.Title = "AllSuppliersForUser";
}
<h2>All suppliers for user</h2>
<br />
@Html.ActionLink("New Supplier", "Add", null, new {@class = "btn btn-lg btn-primary" })
<br />
<br />

<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th>Importer</th>
        <th>Actions</th>
    </tr>
    @foreach (var supplier in Model)
    {
        <tr>
            <td>@supplier.Name</td>
            @if (@supplier.IsImporter)
            {
                <td>Yes</td>
            }
            else
            {
                <td>No</td>
            }
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = supplier.Id}, null)
                @Html.ActionLink("Delete", "Delete", new { id = supplier.Id}, null)
            </td>

        </tr>
    }
</table>