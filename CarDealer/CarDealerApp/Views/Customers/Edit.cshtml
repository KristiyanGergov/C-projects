@using CarDealer.Models.ViewModels
@model EditCustomerVm
@{
    ViewBag.Title = "Edit";
}
<h2>Edit</h2>

<form method="post">
    <input type="number" name="Id" hidden="hidden" value="@Model.Id" />
    <div class="form-group">
        <label for="name">Name: </label>
        <input type="text" id="name" value="@Model.Name" name="name" class="form-group" />
    </div>
    <div class="form-group">
        <label for="birthdate">BirthDate: </label>
        <input type="text" id="birthdate" name="birthdate" class="form-group" value="@Model.BirthDate" />
    </div>
    <div class="form-group">
        <input type="submit" value="Submit"/>
    </div>
</form>