@using CarDealer.Models.ViewModels
@model EditPartVm
@{
    ViewBag.Title = "Edit";
}
<h2>Edit</h2>
<h3>@Model.Name</h3>    
<form method="post">
    <input type="number" name="Id" hidden="hidden" value="@Model.Id" />
    <div class="form-group">
        <label for="price">Price: </label>
        <input type="text" name="price" id="price" value="@Model.Price" class="form-group" />
    </div>
    <div class="form-group">
        <label for="quantity">Quantity: </label>
        <input type="text" name="quantity" id="quantity" value="@Model.Quantity" class="form-group">
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" />
    </div>
</form>