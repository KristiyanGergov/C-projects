@model IEnumerable<LearningSystem.Domain.Entity.Course>
@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div>
    <h2>Courses</h2>
    @Html.ActionLink("Add course", "Add", "Admin", new { @class = "btn btn-primary" })
</div>
<table class="table table-striped">
    <tr>
        <th>Course</th>
        <th>Description</th>
        <th>Start date</th>
        <th>End date</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.StartDate.ToString("dd/MM/yyyy")</td>
            <td>@item.EndDate.ToString("dd/MM/yyyy")</td>
            <td>
                @using (Html.BeginForm())
                {
                    @Html.ActionLink("Delete", "Delete", "Admin", new { id = item.Id }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Edit", "Edit", "Admin", new { id = item.Id }, new { @class = "btn btn-danger" })
                }

            </td>
        </tr>
    }
</table>
