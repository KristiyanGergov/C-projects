@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    <div class="form-group">
        @Html.Label("Username")
        @Html.Editor("username", new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.Label("Password")
        @Html.Editor("password", new { htmlAttributes = new { @class = "form-control", @type ="password" } })
    </div>
    <div class="form-group">
        @Html.Label("Confirm password")
        @Html.Editor("confirmPassword", new { htmlAttributes = new { @class = "form-control", @type = "password" } })
    </div>
    <div class="form-group">
        @Html.Label("Name")
        @Html.Editor("name", new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.Label("Email")
        @Html.Editor("email", new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.Label("BirthDate")
        @Html.Editor("birthdate", new { htmlAttributes = new { @class = "form-control", @type = "date"} })
    </div>
    <div class="form-group">
        <input type="submit" name="name" value="Register" />
    </div>
}
